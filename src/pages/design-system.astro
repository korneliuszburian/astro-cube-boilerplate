<script>
  // Interactive sanctuary customization
  const frameSelect = document.getElementById('frameSelect') as HTMLSelectElement;
  const buttonSelect = document.getElementById('buttonSelect') as HTMLSelectElement;
  const sanctuaryPreview = document.getElementById('sanctuaryPreview');

  if (frameSelect && buttonSelect && sanctuaryPreview) {
    const updatePreview = () => {
      const selectedFrame = frameSelect.value;
      const selectedButton = buttonSelect.value;

      sanctuaryPreview.innerHTML = `
        <div class="preview-frame" data-variant="${selectedFrame}">
          <div class="preview-content">
            <h4 class="preview-title">YOUR SANCTUARY</h4>
            <p class="preview-text">Customize your sacred space</p>
            <button class="preview-button gothic-button" data-variant="${selectedButton}">
              CUSTOMIZE
            </button>
          </div>
        </div>
      `;
    };

    frameSelect.addEventListener('change', updatePreview);
    buttonSelect.addEventListener('change', updatePreview);
  }

  // Background preview functionality
  document.addEventListener('DOMContentLoaded', () => {
    const backgroundExamples = document.querySelectorAll('.background-example');

    backgroundExamples.forEach(example => {
      example.addEventListener('click', () => {
        const bgImage = example.style.backgroundImage;
        if (bgImage) {
          // Create fullscreen preview
          const preview = document.createElement('div');
          preview.className = 'fullscreen-preview';
          preview.style.cssText = `
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: ${bgImage};
            background-size: cover;
            background-position: center;
            z-index: 9999;
            cursor: pointer;
            backdrop-filter: blur(0px);
          `;

          preview.addEventListener('click', () => {
            document.body.removeChild(preview);
          });

          document.body.appendChild(preview);
        }
      });
    });

    // Staggered reveal animations
    const demoElements = document.querySelectorAll('.button-demo, .frame-demo, .addon-demo, .background-demo, .menu-demo');
    demoElements.forEach((element, index) => {
      (element as HTMLElement).style.animationDelay = `${index * 0.1}s`;
      (element as HTMLElement).style.opacity = '0';
      (element as HTMLElement).style.animation = 'fadeInUp 0.6s ease-out forwards';
    });
  });

  // Add fadeInUp animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  `;
  document.head.appendChild(style);
</script>